<%= simple_form_for @cronograma, :html => { :class => 'form-horizontal', :remote => true } do |f| %>
  <div class="form­-group"> 
    <label for="name" class="col-­sm-­3 control­-label">Fecha</label>  
    <div class="col­-md-­4"> 
       <%= f.text_field :fecha, class: 'datepicker' %>
        <script type="text/javascript">
         $('.datepicker').datepicker({
          language: "es",
          format: "yyyy/mm/dd",
          keyboardNavigation:false,
          forceParse:false,
          autoclose:true,
          todayHighlight:true,

        });
    </script>
    </div> 
   </div>
  <%= f.input :lugar_salida %>
  <%= f.input :ficha_grupo %>
  <%= f.input :tipo_salida_id %>
  <%= f.input :programa %>
  <%= f.input :descripcion %>

<div class="form­-group"> 
  <div class="col­-sm­-offset­-2 col-­sm­-10"> 
  <%= f.submit "Guardar", class: "btn btn-info btn-xs" %> 
  <%= link_to t('.cancel', :default => t("helpers.links.cancelar")),cronogramas_path, :class => 'btn btn-default btn-xs' %>
</div> 

<% end %>
