<%= simple_form_for(@cronograma, 
    :html => { :class => 'form-horizontal', :remote => true }) do |f| %>

  <div class="form­-group"> 
    <label for="name" class="col-­sm-­3 control­-label">Fecha</label>  
    <div class="col­-md-­4"> 
       <%= f.text_field :fecha, class: 'datepicker' %>
        <script type="text/javascript">
         $('.datepicker').datepicker({
          language: "es",
          format: "yyyy/mm/dd",
          keyboardNavigation:false,
          forceParse:false,
          autoclose:true,
          todayHighlight:true,

        });
    </script>
    </div> 
   </div>

   <div class="form-group">
   <label for="lugar_salida" class="col-sm-4 control-label">lugar salida</label>
   <div class="col-sm-4">
      <%= f.input :lugar_salida, class: "form-control", label: false %>
   </div>
</div>

 <div class="form-group">
   <label for="ficha_grupo" class="col-sm-4 control-label">ficha grupo</label>
   <div class="col-sm-4">
      <%= f.input :ficha_grupo, class: "form-control", label: false %>
   </div>
</div>

<div class="field">
    <b>Tipo de salidas</b> <br>
    <%= f.collection_select :tipo_salida_id, TipoSalida.all, :id, :nombre, class: "form-control", prompt:
    "Seleccione Tipo salidas" %>
  </div>

<div class="form-group">
   <label for="programa" class="col-sm-4 control-label">programa</label>
   <div class="col-sm-4">
      <%= f.input :programa, class: "form-control", label: false %>
   </div>
</div>

<div class="form-group">
   <label for="descripcion" class="col-sm-4 control-label">descripcion</label>
   <div class="col-sm-4">
      <%= f.input :descripcion, class: "form-control", label: false %>
   </div>
</div>
 

  

<div class="form­-group"> 
  <div class="col­-sm­-offset­-2 col-­sm­-10"> 
  <%= f.submit "Guardar", class: "btn btn-info btn-xs" %> 
  <%= link_to t('.cancel', :default => t("helpers.links.cancelar")),cronogramas_path, :class => 'btn btn-default btn-xs' %>
</div> 

<% end %>
