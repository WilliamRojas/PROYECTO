<h1>Lista de los tipos de salidas</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"><%=t '.actions', :default => t("helpers.Acciones") %></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_salidas.each do |tipo_salida| %>
  <tr>
   <td><%= tipo_salida.nombre %></td>
   <td><%= link_to 'Ver', tipo_salida, :class => 'btn btn-success btn-xs' %></td>
   <td><%= link_to 'Editar', edit_tipo_salida_path(tipo_salida),:class=>'btn btn-warning btn-xs' %></td>
   <td><%= link_to 'Eliminar', tipo_salida, method: :delete, data: { confirm: 'Esta Seguro?' }, :class=>'btn btn-danger btn-xs' %></td>
 </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new', :default => t("helpers.links.Nuevo tipo de salida")),new_tipo_salida_path,
:class => 'btn btn-primary btn-xs' %>

<%= will_paginate @tipo_salidas, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
<br>