<%- model_class = TipoSalida -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tipo_salidas.each do |tipo_salida| %>
      <tr>
        <td><%= link_to tipo_salida.id, tipo_salida_path(tipo_salida) %></td>
        <td><%= tipo_salida.nombre %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.Editar")),
                      edit_tipo_salida_path(tipo_salida), :class => 'btn btn-warning btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.eliminar")),
                      tipo_salida_path(tipo_salida),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'esta seguro de eliminar esto?')) },
                      :class => 'btn btn-mini btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.Nuevo tipo de salida")),
            new_tipo_salida_path,
            :class => 'btn btn-primary btn-xs' %>
