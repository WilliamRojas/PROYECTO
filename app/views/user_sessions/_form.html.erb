<div class="login">
<%= image_tag("inicio.png") %> 

</div>
<%= form_tag user_sessions_path, :method => :post do %> 

   <div class="field"> 
    <%= label_tag :email %><br /> 
    <%= text_field_tag :email %> 
  </div> 

  <div class="field"> 
    <%= label_tag :password %><br /> 
    <%= password_field_tag :password %> 
  </div>
   
  <div class="actions"> 
    <%= submit_tag "Guardar", class: "btn btn-info btn-xs" %> 
  </div> 
<% end %>