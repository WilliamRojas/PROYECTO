<h1>Lista usuario</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Email</th>
      <th>Crypted password</th>
      <th>Salt</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.crypted_password %></td>
        <td><%= user.salt %></td>
        <td><%= link_to 'Ver', user, class: "btn btn-success btn-xs" %></td>
        <td><%= link_to 'Editar', edit_user_path(user), class: "btn btn-warning btn-xs" %></td>
        <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'EstÃ¡s seguro?' }, class: "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Usuario', new_user_path, class: "btn btn-primary btn-xs" %>
