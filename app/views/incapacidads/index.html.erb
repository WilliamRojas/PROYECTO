<center><h1><b>INCAPACIDADES</b></h1></center><br><br>
	<%= form_tag incapacidads_path, :method => 'get' do %>
	<% content_tag :label do %>
	Fecha inicio:
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Buscar", :name => nil %>
	<% end %>
	<% end %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Funcionario</th>
      <th>Fecha inicio</th>
      <th>Fecha terminaci√≥n</th>
      <th>tipo de incapacidad</th>
      <th>Total dias</th>
      <th>Dias acobrar</th>
      <th>Prorroga</th>
      <th>Numero inpacacidad</th>  
      <th>Origen de la incapacidad</th>
      
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
     <%= render @incapacidads %>
  </tbody>
</table>

<%= button_to 'Nueva Incapacidad', new_incapacidad_path, remote: true, :method=>"get", class: "btn btn-primary btn-xs" %> 

<br>

<p>
  Descarga:
  <%= link_to "CSV", incapacidads_path(format: "csv") %> --
  <%= link_to "Excel", incapacidads_path(format: "xls") %>
</p>
 
<%= will_paginate @incapacidads, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
<br>
