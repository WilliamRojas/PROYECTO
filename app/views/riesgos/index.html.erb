<h1>Listado riesgo</h1>
	<%= form_tag riesgos_path, :method => 'get' do %>
	<% content_tag :label do %>
	Empresa:
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Buscar", :name => nil %>
	<% end %>
	<% end %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Empresa</th>
      <th>Funcionario</th>
      <th>Fecha</th>
      <th>Tipo de riesgo</th>
      <th>Factor de riesgo</th>
      <td>fuente generadora </td>
      <th>Efecto conocido</th> 
      <th>Tiempo</th>
      <th>Consecuencia</th>
      <th>Exposicion</th>
      
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
     <%= render @riesgos %>
  </tbody>
</table>

<br>
<%= link_to 'Grafica de Riegos', riesgos_estadistica_path, remote: true %>
<br>
 
<%= button_to 'Nuevo Riesgo', new_riesgo_path, :method=>"get", class: "btn btn-primary btn-xs" %> 

<%= will_paginate @riesgos, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
<br>
Riesgos: <%= @riesgos.count %>
 

