<h1>Listado incidentes</h1>
	<%= form_tag incidentes_path, :method => 'get' do %>
	<% content_tag :label do %>
	Fecha del reporte:
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Buscar", :name => nil %>
	<% end %>
	<% end %>


<table class="table table-bordered">
  <thead>
    <tr>
      
      <th>Funcionario</th>
      <th>Area o proceso</th>
      <th>Lugar de ocurrencia</th>
      <th>Fecha del reporte</th>
      <th>Personal involucrado</th>
      <th>Otro</th>
      <th>Especifique</th>
      <th>Nombre completo1</th>
      <th>Email1</th>
      <th>Telefono1</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
     <%= render @incidentes %>
  </tbody>
</table>

<%= button_to 'Nuevo Incidente', new_incidente_path, :method=>"get", class: "btn btn-primary btn-xs" %> <br>

<p>
  Descarga:
  <%= link_to "CSV", incidentes_path(format: "csv") %> |
  <%= link_to "Excel", incidentes_path(format: "xls") %>
</p>
<br>

<%= will_paginate @incidentes, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
<br>
Incidentes: <%= @incidentes.count %>
 

